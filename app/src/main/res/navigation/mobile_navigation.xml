<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_today">

    <fragment
        android:id="@+id/nav_today"
        android:name="com.example.timeapp.ui.today.TodayFragment"
        android:label="@string/today"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_newTaskActivity"
            app:destination="@id/newTaskActivity"
            app:popUpTo="@id/nav_today" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.timeapp.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.timeapp.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <activity
        android:id="@+id/newTaskActivity"
        android:name="com.example.timeapp.ui.NewTaskActivity"
        android:label="activity_new_task"
        tools:layout="@layout/activity_new_task" />


</navigation>