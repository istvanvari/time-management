<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timeapp">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TimeApp">
        <activity
            android:name=".ui.routines.NewEditRoutineActivity"
            android:exported="false"
            android:theme="@style/Theme.TimeApp.NoActionBar"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ui.today.EditTaskActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Floating" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.TimeApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.today.NewTaskActivity"
            android:exported="false"
            android:label="@string/new_task"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.TimeApp.NoActionBar" />
    </application>

</manifest>